var $link = $('#link-<%= @link.id%>');
<% if @link.valid? %>
$link.replaceWith('<%= j render partial: 'link', locals: {link: @link} %>');
app.markdown('#link-<%= @link.id%> .markdown');
<% else %>
$link.find('.votable-form-container').html('<%= j render partial: 'form' %>');
$link.find('.my_wmd').wmd();
<% end %>