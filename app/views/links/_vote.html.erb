<% if !@once_flag && @once_flag=1 %>
    <style type=text/css>
        .link-rating-container {
            /*margin-top: -5px;*/
        }

        .booking-blocks {
            overflow: visible;
        }

        .link-rating {
            position: relative;
            width: 35px;
            height: 55px;
            margin-top: -3px;
        }

        .icon-vote {
            font-size: 20px;
            display: block;
            position: absolute;
            top: -8px;
        }

        .icon-vote:hover {
            opacity: .5;
        }

        .vote-up, .vote-down {
            position: absolute;
            height: 13px;
            width: 30px;
            cursor: pointer;
        }

        .vote-up.vote2 {
            top: 0px;
            /*z-index: 1;*/
        }

        .vote-up.vote1 {
            top: 9px;
            /*z-index: 2;*/
        }

        .vote-down.vote1 {
            top: 41px;
        }

        .vote-down.vote2 {
            top: 50px;
        }

        .vote-value {
            position: absolute;
            top: 19px;
            width: 18px;
            text-align: center;
        }

        .red {
            color: #e02222;
        }

    </style>
    <script type="text/javascript">
        $(function () {
            $('.vote-up').live('click', function () {
                $.ajax({
                    type: "POST",
                    url: <%= vote_votes_path %>,
                    data: {},
                    success: success,
                    dataType: dataType
                });
            });
        });
    </script>
<% end %>
<% user_vote = user_signed_in? ? votable.user_vote(current_user) : nil
   #vote_value = user_vote.value
   @c ||= -4
   @c = @c + 1
   vote_value = @c
%>
<div class='pull-left link-rating'>
  <% if vote_value && vote_value >= 2 %>
      <div class='vote-btn vote-up vote2'>
        <i class='icon-chevron-up icon-vote' style="z-index: 3"></i>
      </div>
  <% end %>
  <div class='vote-btn vote-up vote1 <%= 'red' if vote_value && vote_value >= 1 %>'>
    <i class='icon-chevron-up icon-vote' style="z-index: 2;"></i>
  </div>
  <div class='vote-value' style="font-size: 17px">
    <%= vote_value %>
    <i class="icon-refresh icon-spin hide"></i>
  </div>
  <div class='vote-btn vote-down vote1 <%= 'red' if vote_value && vote_value <= -1 %>' onclick='console.log(-1);'>
    <i class='icon-chevron-down icon-vote'></i>
  </div>
  <% if vote_value && vote_value <= -1 %>
      <div class='vote-btn vote-down vote2 <%= 'red' if vote_value <= -2 %>' onclick='console.log(-2);'>
        <i class='icon-chevron-down icon-vote'></i>
      </div>
  <% end %>
</div>
