<% if @link.valid? %>
//flash('notice', 'Link');
$newLink = $('<%= j render partial: 'links/link', locals: {link: @link} %>');
$('#links').append($newLink.fadeIn());
$('.link').removeClass('selected');
$('#link-' + <%= @link.id %>).addClass('selected');
$('body').animate({
    scrollTop: $('#link-' + <%= @link.id %>).offset().top
}, 1000);
