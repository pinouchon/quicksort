<%
   flash_types = {notice: 'alert-success',
                  alert: '',
                  info: 'alert-info',
                  success: 'alert-success',
                  error: 'alert-error'}
%>

<% if flash %>
    <div class='space12'></div>
    <div class="row-fluid">
      <div class="span12">
        <% flash_types.each do |type, klass| %>
            <% if flash && flash[type] %>
                <div class="alert <%= klass %>">
                  <button class="close" data-dismiss="alert"></button>
                  <%= flash[type] %>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
<% end %>