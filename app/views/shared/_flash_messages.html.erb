<%
   flash_types = {notice: 'alert-success',
                  alert: '',
                  info: 'alert-info',
                  success: 'alert-success',
                  error: 'alert-error'}
   display = (flash[:notice] || flash[:alert] || flash[:info] || flash[:success] || flash[:error]) ?
           'block' : 'none'
%>
<div class='space12'></div>
<div class="row-fluid">
  <div class="span12" id="flash" style="display:<%= display %>">
    <% flash_types.each do |type, klass| %>
        <% if flash && flash[type] %>
            <div class="alert <%= klass %>">
              <button class="close" data-dismiss="alert"></button>
              <%= flash[type] %>
            </div>
        <% end %>
    <% end %>
  </div>
</div>
