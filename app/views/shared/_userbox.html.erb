<% highlighted ||= false %>

<div class="userbox <%= 'highlighted' if highlighted %>">
  <div>
    posted:
    <% if Time.now - created_at < 1.day %>
        <%= time_ago(created_at) %> ago
    <% else %>
        <%= created_at.strftime('%d %b %Y at %H:%M') %>
    <% end %>
  </div>
  <div class="usericon">
    <i class="icon-user"></i>
  </div>
  <div class="user-name"><%= link_to user.name.capitalize, user_path(user.id) %></div>
  <div class="user-reputation"><%= user.reputation %></div>
</div>